<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:transitionName="company_icon"
        android:id="@+id/imageViewCompany"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:src="@drawable/ic_network_wifi_150"
        android:layout_height="80dp" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Hello, welcome on board!"
        android:textAppearance="@style/MaterialAnimations.TextAppearance.Title.Inverse"
        android:textAlignment="center"
        android:textColor="#25917d" />


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:orientation="horizontal">
            <Button
                android:fontFamily="sans-serif-light"
                android:layout_width="fill_parent"
                android:theme="@style/Button"
                android:layout_height="wrap_content"
                android:background="#502db199"
                android:padding="20dp"
                android:onClick="register"
                android:layout_weight="1"
                android:text="@string/register"
                android:textColor="#000" />
            <Button
                android:onClick="signIn"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#502db199"
                android:padding="20dp"
                android:text="Sign In"
                android:textColor="#000" />
        </LinearLayout>


</LinearLayout>